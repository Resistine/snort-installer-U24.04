rel=$(lsb_release -a |grep Release |sed 's/Release:\s//')mkdir ~/snort_src
if [ $rel == "24.04" ] ;then 
cd ~/snort_src
apt install -y build-essential autotools-dev libdumbnet-dev libluajit-5.1-dev libpcap-dev zlib1g-dev pkg-config libhwloc-dev cmake liblzma-dev openssl libssl-dev cpputest libsqlite3-dev libtool uuid-dev git autoconf bison flex libcmocka-dev libnetfilter-queue-dev libunwind-dev libmnl-dev ethtool libjemalloc-dev libhyperscan-dev asciidoc
export https_proxy=https://10.49.1.100:3128
export http_proxy=http://10.49.1.100:3128
cd ~/snort_src/
wget wget https://sourceforge.net/projects/pcre/files/pcre/8.45/pcre-8.45.tar.gz
tar -xzvf pcre-8.45.tar.gz
cd pcre-8.45
./configure
make -j 4
sudo make install
cd ~/snort_src
wget https://github.com/gperftools/gperftools/releases/download/gperftools-2.9.1/gperftools-2.9.1.tar.gz
tar xzvf gperftools-2.9.1.tar.gz
cd gperftools-2.9.1
./configure
make -j 4
sudo make install
wget http://www.colm.net/files/ragel/ragel-6.10.tar.gz
tar -xzvf ragel-6.10.tar.gz
cd ragel-6.10
./configure
make -j 4
sudo make install
wget https://boostorg.jfrog.io/artifactory/main/release/1.77.0/source/boost_1_77_0.tar.gz
tar -xvzf boost_1_77_0.tar.gz
cd ~/snort_src
wget https://github.com/google/flatbuffers/archive/refs/tags/v2.0.0.tar.gz -O flatbuffers-v2.0.0.tar.gz
tar -xzvf flatbuffers-v2.0.0.tar.gz
mkdir flatbuffers-build
cd flatbuffers-build
cmake ../flatbuffers-2.0.0
make -j 4
sudo make install
cd ~/snort_src
wget https://github.com/snort3/libdaq/archive/refs/heads/master.zip
unzip master.zip
cd libdaq-master/
./bootstrap
./configure
make -j 4
sudo make install
cd ~/snort_src
wget https://github.com/snort3/snort3/archive/refs/tags/3.3.4.0.tar.gz -O snort-latest.tar.gz
tar -xvf snort-latest.tar.gz 
cd snort3-3.3.4.0/
./configure_cmake.sh --prefix=/usr/local --enable-tcmalloc
cd build
make -j 4
sudo make install
cd ~/snort_src
mkdir snort_plugins
cd snort_plugins
git config --global http.proxy http://10.49.1.100:3128
git clone https://github.com/kuceros/snort_mitre 
cd snort_mitre
./configure_cmake.sh
cd build
sudo make install
snort -v 
else
echo "you are not on ubuntu 24.04"
fi
